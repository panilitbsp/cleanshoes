<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Shoe Type Selection -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/shoeTypeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/editButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textSize="14sp"
                android:textColor="@color/blue"
                android:background="@android:color/transparent"
                android:padding="0dp"/>
        </LinearLayout>

        <!-- Dirtiness Level Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level of Dirtiness"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(select 1 option):"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/radioGroupDirtiness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Dirtiness Options -->
            <!-- Light dirty -->
            <RadioButton
                android:id="@+id/radioLightDirty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Light Dirty (20.000)" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Debu tipis kayak bedak, tapi \nwaterproof"
                    android:textSize="14sp"
                    android:textColor="@color/gray_500"/>
            </LinearLayout>

            <!-- Medium Dirty -->
            <RadioButton
                android:id="@+id/radioRegularDirty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Dirty (30.000)" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Debu mulai serius, tapi mamah?"
                    android:textSize="14sp"
                    android:textColor="@color/gray_500"/>
            </LinearLayout>

            <!--  Heavy dirty -->
            <RadioButton
                android:id="@+id/radioHeavyDirty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heavy Dirty (40.000)" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ni sepatu abis buat perang uhud kata gua"
                    android:textSize="14sp"
                    android:textColor="@color/gray_500"/>
            </LinearLayout>

            <!--  Bad dirty -->
            <RadioButton
                android:id="@+id/radioBadDirty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bad Dirty (50.000)" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Berapa tahun gak lu cuci?"
                    android:textSize="14sp"
                    android:textColor="@color/gray_500"/>
            </LinearLayout>
        </RadioGroup>

        <!-- Treatments Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Treatments"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Treatment (Select up to 3):"
            android:layout_marginBottom="8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="8dp"/>

        <!-- Treatments List -->

        <!-- Regular Cleaning -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <CheckBox
                    android:id="@+id/checkboxRegular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Regular Cleaning"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Free"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nunggu 1-2 hari"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="32dp"/>

            <View android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"/>
        </LinearLayout>

        <!-- Fast Cleaning -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <CheckBox
                    android:id="@+id/checkboxFast"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fast Cleaning"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ 5.000"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nunggu 3-5 jam aja"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="32dp"/>

            <View android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"/>
        </LinearLayout>

        <!-- Unyellowing Package Cleaning -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <CheckBox
                    android:id="@+id/checkboxUnyellowing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Unyellowing Package"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ 15.000"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(deep cleaning + unyellowing)"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="32dp"/>

            <View android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"/>
        </LinearLayout>

        <!-- Repaint Cleaning -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <CheckBox
                    android:id="@+id/checkboxRepaint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Repaint"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ 15.000"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dibikin kaya baru, tapi murah kan"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="32dp"/>

            <View android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"/>
        </LinearLayout>

        <!-- Re-glue Cleaning -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <CheckBox
                    android:id="@+id/checkboxReglue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Re-glue"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ 15.000"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nunggu 3-7 hari"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="32dp"/>

            <View android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"/>
        </LinearLayout>

        <!-- Add to Cart Button -->
        <Button
            android:id="@+id/addToCartButton"
            style="@style/AddToCartButton"
            android:text="Add to Cart"
            android:layout_marginVertical="30dp"/>

    </LinearLayout>
</ScrollView>
