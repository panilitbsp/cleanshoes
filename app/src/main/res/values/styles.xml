<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Button borderless-->
    <style name="SignupText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/sign_up_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <!-- Base Button Style -->
    <style name="BaseButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">@dimen/btn_height</item>
        <item name="android:minWidth">240dp</item>
        <item name="android:layout_marginTop">@dimen/margin_top_second_elemen</item>
    </style>

    <!-- Sign In Button (Blue) -->
    <style name="SignInButton" parent="BaseButton">
        <item name="android:backgroundTint">#39A2DB</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Sign Up Button (Outlined) -->
    <style name="SignUpButton" parent="BaseButton">
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textColor">#39A2DB</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#39A2DB</item>
    </style>

    <!-- add to card button -->
    <style name="AddToCartButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@color/blue</item>
    </style>

</resources>

